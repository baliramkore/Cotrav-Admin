<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="DialogAnimationTheme">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="buttonStyle">@style/AlertDialog.AppCompat</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="CustomDialogTheme1" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="buttonStyle">@style/AlertDialog.AppCompat</item>
    </style>


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="NormalBlueText">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="NormalText">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <style name="Heading">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Time">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/colorPrimaryText</item>
    </style>

    <style name="Label1">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <style name="Label2">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <style name="Label3">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>
</resources>
