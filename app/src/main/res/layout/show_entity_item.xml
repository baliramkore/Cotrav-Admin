<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:elevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:paddingRight="@dimen/standard_10"
            android:paddingLeft="@dimen/standard_10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2"
                >

                <TextView
                    android:id="@+id/tv_companyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    style="@style/Label2"
                    android:gravity="center" />

            </LinearLayout>
            <View
                style="@style/Divider"
                android:layout_width="match_parent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2"
                >

                <TextView
                    style="@style/Label2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Entity Name"
                     />

                <TextView
                    android:id="@+id/tv_entityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Label3"
                    android:layout_weight="1"
                    android:text="NA" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="2dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="City Name"
                    android:gravity="start"
                    android:fontFamily="@font/montserrat"
                    style="@style/Label2"
                    />

                <TextView
                    android:id="@+id/text_billing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Label3"
                    android:text="NA" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GST Number"
                    style="@style/Label2"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tv_gstNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Label3"
                    android:text="NA" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pan Number"
                    style="@style/Label2"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tv_panNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Label3"
                    android:text="NA" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contact Number"
                    style="@style/Label2"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tv_contactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Label3"
                    android:text="NA" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/entity_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contact Person"
                    style="@style/Label2"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tv_contactName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address"
                    style="@style/Label2"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA" />


            </LinearLayout>
            </LinearLayout>
            <View
                style="@style/Divider"
                android:layout_width="match_parent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:weightSum="2"
                >

                <ImageView
                    android:id="@+id/btn_deleteEntity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_delete"
                    ></ImageView>
                <ImageView
                    android:id="@+id/btn_editEntity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_edit"
                    ></ImageView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btn_showDetails"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:src="@drawable/ic_drop_down_arrow"
                    android:tint="@color/colorPrimary"></ImageView>
                    <ImageView
                        android:id="@+id/btn_hideDetails"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_drop_up_arrow"
                        android:tint="@color/colorPrimary"></ImageView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>