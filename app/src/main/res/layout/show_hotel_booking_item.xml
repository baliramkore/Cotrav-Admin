<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightwhite"
        card_view:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:elevation="3dp"
        >
        <LinearLayout
            android:id="@+id/lay_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/refrence_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/booking_status"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:padding="2dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textIsSelectable="true"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp"
                    android:gravity="end" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/booking_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryText"
                    android:textIsSelectable="true"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginRight="10dp"
                    android:gravity="start" />

            </LinearLayout>


            <View
                style="@style/Divider"
                android:layout_marginTop="5dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Employee Name :"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/emp_name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"
                    />


<!--                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Employee Name :"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/emp_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryText"
                    android:textIsSelectable="true"
                    android:textSize="16sp"/>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        >


                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Pickup City:"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/pickup_city"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:fontFamily="@font/montserrat"
                            android:layout_height="wrap_content"
                            />
<!--
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:paddingStart="10dp"
                            android:text="City : "
                            android:textStyle="bold"
                            android:textColor="@android:color/black"                            android:textIsSelectable="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/pickup_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:textSize="20dp"
                            android:textColor="@color/colorPrimaryText"
                            />
-->


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        >

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Prefered Area:"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/pickup_boardingpoint"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:fontFamily="@font/montserrat"
                            android:layout_height="wrap_content"
                            />
              <!--          <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Prefered Area : "
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/pickup_boardingpoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA" />-->

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/checkin_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/pickup"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat"
                            android:text="Check-In"/>
                        <TextView
                            android:id="@+id/pickup_time"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text=" - - : - -  - -"
                            style="@style/Time"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/checkin_txt"/>
                        <TextView
                            android:id="@+id/pickup_date"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/montserrat"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/pickup_time"
                            android:layout_toRightOf="@id/checkin_txt"/>

                        <View
                            android:layout_toRightOf="@+id/pickup_date"
                            android:layout_toLeftOf="@+id/checkout_txt"
                            android:layout_below="@id/pickup_time"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary"
                            android:layout_width="100dp" />

                        <TextView
                            android:id="@+id/drop_time"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text=" - - : - -  - -"
                            style="@style/Time"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true" />
                        <TextView
                            android:id="@+id/drop_date"
                            android:layout_width="105dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/montserrat"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/drop_time"
                            android:layout_alignParentRight="true" />
                        <TextView
                            android:id="@+id/checkout_txt"
                            android:textColor="@color/drop"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat"
                            android:text="Check-out"
                            android:layout_toLeftOf="@+id/drop_time"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    style="@style/Divider"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imv_call"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:tint="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/phonecall"

                        />
                    <ImageView
                        android:id="@+id/imageDetails"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:tint="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/deatils_icon"

                        />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imv_cancel"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:tint="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_cancel"
                        />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>